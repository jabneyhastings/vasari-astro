---
interface Slide {
  image: string;
  title?: string;
  description?: string;
  link?: string;
}

interface Props {
  slides: Slide[];
}

const { slides } = Astro.props;
---

<div class="carousel">
  {slides && slides.map((slide) => (
    <div class="slide">
      <img src={slide.image} alt={slide.title || 'Carousel image'} />
      {slide.title && <h3>{slide.title}</h3>}
      {slide.description && <p>{slide.description}</p>}
    </div>
  ))}
</div>

<style>
  .carousel {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
  }
  .slide {
    min-width: 300px;
    text-align: center;
  }
  .slide img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
</style>