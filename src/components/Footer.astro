        margin: 0 auto;
        display: grid;
        grid-template-columns: 2fr 1fr 1fr;
        gap: 3rem;
    }

    .footer-section p,
    .footer__copyright p {
        line-height: 1.4;
        font-size: var(--fs-small);
    }

    .footer__copyright {
        text-align: center;
        padding: 0 0 50px 0;
    }

    .footer table td {
        padding: 0 0.5rem 0.5rem 0;
        vertical-align: top;
    }

    @media (max-width: 768px) {
        .footer-content {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
    }
</style>