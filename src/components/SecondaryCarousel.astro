---
import { Image } from 'astro:assets';

import rightArrow from '../images/arrow-right.svg';
import leftArrow from '../images/arrow-left.svg';

interface Slide {
    image: string;
    text?: string;
}

interface Props {
    title: string;
    slides: Slide[];
}

const { slides } = Astro.props;
---

<section class="secondary-carousel-section">
    <div class="carousel-header">
        <div class="carousel-controls">
            <button class="carousel-btn" id="prevBtn"><Image src={leftArrow} alt="Previous" width="56" height="28" /></button>
            <button class="carousel-btn" id="nextBtn"><Image src={rightArrow} alt="Next" width="56" height="28" /></button>
        </div>
    </div>

    <div class="secondary-carousel">
        <div class="carousel-track" id="carouselTrack">
            {slides.map((slide) => (
                <div class="carousel-slide">
                    <div class="slide-image">
                        <img src={slide.image} alt="Carousel slide" />
                    </div>
                    {slide.text && (
                        <div class="slide-text">
                            <p>{slide.text}</p>
                        </div>
                    )}
                </div>
            ))}
        </div>
    </div>
</section>

<style>
/* Secondary Carousel */
    .secondary-carousel-section {
        padding: 4rem 2rem;
    }

    .carousel-header {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto 2rem;
    }

    .carousel-header h2 {
        font-size: 2rem;
        color: #333;
    }

    .carousel-controls {
        display: flex;
        gap: 1rem;
    }

    .carousel-btn {
        border: none;
        background: transparent;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: opacity 0.3s ease;
    }

    .carousel-btn:hover {
        opacity: 0.5;
    }

    .secondary-carousel {
        position: relative;
        max-width: 1200px;
        margin: 0 auto;
        overflow: hidden;
    }

    .carousel-track {
        display: flex;
        transition: transform 0.5s ease;
    }

    .carousel-slide {
        flex: 0 0 calc(40% - 1rem);
        margin-right: 2rem;
        background: white;
        overflow: hidden;
    }

    .slide-text {
        padding: 1.5rem;
        text-align: center;
        color: #666;
    }

    .carousel-track {
        display: flex;
        transition: transform 0.3s ease;
    }

    .slide-image {
        height: 400px;
        background: #f0f0f0;
        margin-bottom: 1rem;
    }

    .slide-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .slide-text p {
        font-size: 0.9rem;
        line-height: 1.4;
    }
</style>