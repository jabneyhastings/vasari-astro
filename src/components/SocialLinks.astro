---
export interface Props {
  links: Array<{
    name: string;
    url: string;
  }>;
  class?: string;
}

const { links } = Astro.props;
---

<ul class="social-links">
  {links.map((link) => (
    <li>
      <a href={link.url} target="_blank" rel="noopener noreferrer">
        {link.name}
      </a>
    </li>
  ))}
</ul>

<style>
.social-links {
  list-style: none;
  display: flex;
  gap: 1rem;
  padding: 0;
  margin: 0;
}
</style>