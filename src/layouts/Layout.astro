---
export interface Props {
  title: string;
  description?: string;
}

import { Image } from 'astro:assets';

import SocialLinks from "../components/SocialLinks.astro";

import logo from '../images/logo.png';
import emblem from '../images/emblem.png';
// import xIcon from "../images/x.svg?url";
import instagramIcon from "../images/instagram.svg?url";
// import behanceIcon from "../images/behance.svg?url";

const socialLinks = [
  // { name: "X", url: "https://x.com/vasaridesign", icon: xIcon },
  { name: "Instagram", url: "https://instagram.com/vasaridesign_", icon: instagramIcon },
  // { name: "Behance", url: "https://behance.net/vasaridesign", icon: behanceIcon },
];

import '../styles/fonts.css';
import '../styles/global.css';

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description || "Vasari Design - Interior Design Services"} />

    <!-- SEO / Social -->
    <meta property="og:title" content={`Vasari Design - ${title}`} />
    <meta property="og:description" content={description || "Vasari Design - Interior Design Services"} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://vasaridesign.com/" />
    <meta property="og:image" content="https://vasaridesign.com/social-preview.jpg" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`Vasari Design - ${title}`} />
    <meta name="twitter:description" content={description || "Vasari Design - Interior Design Services"} />
    <meta name="twitter:image" content="https://vasaridesign.com/social-preview.jpg" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href="https://vasaridesign.com/" />
    <meta name="theme-color" content="#080A1E" />

    <link rel="preload" href="/fonts/eb-garamond-regular.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/eb-garamond-regular.woff" as="font" type="font/woff" crossorigin>

    <title>Vasari Design - {title}</title>
  </head>
  <body id="home">
    <header class="header">
      <a href="#services" class="text-link">Services</a>
      <a href="#home" class="logo">
        <Image src={logo} alt="Vasari Design" width="105" height="93" loading="eager" fetchpriority="high" />
      </a>
      <a href="#about" class="text-link">About</a>
    </header>

    <main>
      <slot />
    </main>

    <footer class="footer">
      <div class="footer-content">
        <div class="footer-section">
          <Image src={emblem} alt="Vasari Design" width="55" height="56" />
          <p>
            At Vasari, we believe a home should offer more than visual beauty alone â€” it should
            offer depth, clarity, and a sense of belonging.
          </p>
        </div>
        <div class="footer-section">
          <table>
            <tr>
              <td class="bold">London:</td>
              <td><a href="tel:+442035445555">+44 0203 5445 5555</a></td>
            </tr>
            <tr>
              <td class="bold">Dallas:</td>
              <td><a href="tel:+18173455555">+1 817 345 5555</a></td>
            </tr>
            <tr>
              <td class="bold">Support:</td>
              <td><a href="mailto:info@vasarilondon.com">info@vasarilondon.com</a></td>
            </tr>
          </table>
        </div>
        <div class="footer-section">
          <SocialLinks links={socialLinks} />
        </div>
      </div>

      <div class="footer__copyright">
        <p>&copy; {new Date().getFullYear()} Vasari. All rights reserved.</p>
      </div>
    </footer>

    <script src="../scripts/global.js"></script>
  </body>
</html>
