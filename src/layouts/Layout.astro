---
export interface Props {
  title: string;
  description?: string;
}

import { ClientRouter } from "astro:transitions";
import { fade } from "astro:transitions";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import '../styles/fonts.css';
import '../styles/global.css';

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description || "Vasari Design - Interior Design Services"} />

    <!-- SEO / Social -->
    <meta property="og:title" content={`Vasari Design - ${title}`} />
    <meta property="og:description" content={description || "Vasari Design - Interior Design Services"} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://vasaridesign.com/" />
    <meta property="og:image" content="https://vasaridesign.com/social-preview.jpg" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`Vasari Design - ${title}`} />
    <meta name="twitter:description" content={description || "Vasari Design - Interior Design Services"} />
    <meta name="twitter:image" content="https://vasaridesign.com/social-preview.jpg" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href="https://vasaridesign.com/" />
    <meta name="theme-color" content="#F1EEE9" />

    <title>Vasari Design - {title}</title>

    <ClientRouter />
  </head>
  <body id="home">

    <Header />

    <main>
      <slot />
    </main>

    <Footer />

    <script src="../scripts/global.js"></script>
  </body>
</html>
